// ---------------- Tags ----------------
hr
  border-top 2px dotted
  border-bottom 0
  margin 0 1em
  opacity 0.5
  transition 0.1s

input
  &[type='text'], &[type='url']
    appearance none
    width 100%
    min-width 10em
    padding 0.7em 1em
    border 0
    border-radius 8px
    outline 0
    font-size 0.75em
    color theme-90
    caret-color #0a84ff
    transition 0.1s
    box-sizing border-box

textarea
  appearance none
  width 100%
  min-width 10em
  padding 0.7em 1em
  border 0
  border-radius 8px
  outline 0
  font-size 0.75em
  color theme-90
  caret-color #0a84ff
  transition 0.1s
  box-sizing border-box

input
  &[type='text']
    height 2.5em
    margin-bottom -0.5em

  &[type='url']
    height 2.5em
    margin-bottom -0.5em
    letter-spacing 0
    font-weight 500
    font-family 'Courier Prime', Consolas, 'Courier New', Courier, Monaco, monospace, 'BIZ UDGothic', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', '游ゴシック Medium', YuGothic, '游ゴシック体', sans-serif

a
  color theme-90
  text-decoration-color theme-90
  letter-spacing 0
  font-weight 700
  font-family 'Lora', 'Noto Sans JP', 'Yu Gothic Medium', '游ゴシック Medium', YuGothic, '游ゴシック体', sans-serif
  font-style italic

textarea
  line-height 1.75em
  margin-bottom -0.8em
  resize none
  transition 0.1s

input
  &[type='text']:focus, &[type='url']:focus
    box-shadow inset 2px 2px 3px theme-neumorphism-shadow, inset -2px -2px 3px theme-neumorphism-shine

textarea:focus
  box-shadow inset 2px 2px 3px theme-neumorphism-shadow, inset -2px -2px 3px theme-neumorphism-shine

input[type='checkbox']
  cursor pointer
  outline 0
  border 0
  background-color transparent

a
  text-decoration-line none

  &:hover
    text-decoration-line underline

// ---------------- Responsive ----------------
@media screen and (max-width 480px)
  html, body
    font-size 13px

  .column
    padding 0.2em 0.7em 0.65em

  .subinfo
    top 0
    left 7.5em

  input
    &[type='text'], &[type='url']
      font-size 16.25px
      transform scale(0.8)
      width 106.5%
      padding 0.5em 0.5em
      transform translateX(-3%)

  textarea
    font-size 16.25px
    transform scale(0.8)
    width 106.5%
    padding 0.5em 0.5em
    transform translateX(-3%)

  .prColumn .required
    top 0.75em
    left 4em

  .checkbox
    margin-top 1.25em
    margin-left 0

  .agreement
    top 0.35em
    left 6em
