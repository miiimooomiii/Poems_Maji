// ---------------- Theme Color ----------------
// ---------------- Light Theme ----------------
theme-100 = #000000
theme-90 = #2d2d2d
theme-80-pink = #656462
theme-60 = #b3b3b3
theme-60-pink = #a5a4a2
theme-40 = #d7d7d7
theme-30 = #ececec
theme-10 = #f4f4f4
theme-requirement = #e95151
theme-neumorphism-shine = #ffffff
theme-neumorphism-shadow = #cbcbcb

// ---------------- Styles ----------------
.App
  text-align center
  min-height 100%
  overflow auto
  display block

.header
  position fixed

.appbody
  display block
  margin-top 10vh
  margin-left auto
  margin-right auto
  width 92vw
  min-width 10em
  min-height 90%
  max-width 50em
  pointer-events none

.form
  display block
  transition opacity 0.4s cubic-bezier(0.01, 0.3, 0.01, 1)

.headmargin
  position fixed
  height 3em

.column
  display block
  position relative
  border-radius 12px
  margin-bottom 0.4em
  color theme-60
  background-color theme-10
  border 1px solid theme-40

  &:hover, &:focus-within
    color theme-90

  &:hover
    border-color theme-60-pink

  &:focus-within
    border-color theme-80-pink

.prColumn
  color theme-90
  border-color theme-60-pink
  margin-bottom 0

  .column
    border 0
    margin-bottom 0

.label
  font-size 1.6em
  padding 0.35em 1em 1em
  text-align start
  transition 0.1s
  cursor pointer

.subinfo
  position absolute
  top 0.25em
  left 8.5em
  font-size 0.58em

.required
  margin-top 1.2em
  background-color theme-requirement
  font-family 'Noto Sans JP', 'Yu Gothic Medium', '游ゴシック Medium', YuGothic, '游ゴシック体', sans-serif
  font-size 0.5em
  font-weight 700
  color theme-10
  border-radius 4px
  border 0
  padding 0 0.6em 0.08em

.prColumn .required
  margin-top 1.5em

.filled
  background-color theme-40

.visible
  pointer-events auto
  opacity 100%

.invisible
  pointer-events none
  user-select none
  opacity 0%

.fixed
  position fixed

.blob
  content ''
  background-color theme-100
  position fixed
  outline none
  border none
  cursor pointer
  background-size 1600% 1600%
  transform-style preserve-3d
  perspective 1000px
  animation transform 30s ease-in-out infinite both alternate, movement 20s ease-in-out infinite both
  width 80vmin
  height 56vmin
  min-width 200px
  min-height 140px
  transform-origin translate(calc(50vw - 50%), calc(50vh - 50%))
  transform translate(calc(50vw - 50%), calc(50vh - 50%))
  transition all 0.4s cubic-bezier(0, 0.3, 0.01, 1)

  &.mini
    transform translate(-60%, calc(-65%)) scale(2.25, 0.65)
    margin 0

  &.large
    width 900%
    height 315%
    min-width 300px
    min-height 105px
    top -148%
    left -148%
    pointer-events none

.logo
  height 24vmin
  min-height 60px
  position fixed
  pointer-events none
  user-select none
  transform translate(calc(50vw - 50%), calc(50vh - 50%))
  transition all 0.4s cubic-bezier(0.01, 0.3, 0.01, 1)

.thankblob
  transition all 0.4s cubic-bezier(0.01, 0.3, 0.01, 1)

.thankmessage
  position absolute
  pointer-events none
  top 50%
  left 50%
  margin-right -50%
  transform translate(-50%, -50%)

.ag:hover
  text-decoration underline

.agreementswitch
  font-size 1.12em
  padding 0.75em 1em
  background none
  color inherit
  margin 0.25em

  &:hover
    text-decoration underline

  &:active
    opacity 0.5

.checkbox
  margin-top 1em
  margin-left 2em

.agreement
  position absolute
  top 0em
  left 9em
  font-size 0.7em
  color theme-90
  text-decoration inherit

.dotsBox
  position fixed
  right 10px
  bottom 10px
  width 155px
  height 200px
  font-size 1em

.submitFontsize
  font-size 1.2em

