.inlineBlock
  display inline-block

.footer
  background-color theme-30
  text-align left
  transition opacity 0.4s cubic-bezier(0.01, 0.3, 0.01, 1)

.linkbox
  display inline-block
  width 12em
  margin 2em 1.5em
  font-size 1.1em

.link
  display block
  cursor pointer
  margin-bottom 0.25em

.about
  font-size 0.9em
  font-style normal

.twitter:hover
  color #00a0ee
  text-decoration-color #00a0ee

